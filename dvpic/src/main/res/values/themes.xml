<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.Main.Sherlock" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="actionBarStyle">@style/App.ActionBar</item>
        <item name="android:windowBackground">@drawable/back1</item>

    </style>
    
    <style name="Theme.App.Sherlock" parent="Theme.AppCompat">
        <item name="actionBarStyle">@style/Main.ActionBar</item>
    </style>
    
    <style name="Theme.App.Dialog" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:windowFrame">@null</item>
        <item name="background">@color/background_holo_dark</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Holo</item>
        <item name="android:windowBackground">@drawable/dialog_full_holo_dark</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="minWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="minWidthMinor">@dimen/dialog_min_width_minor</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>